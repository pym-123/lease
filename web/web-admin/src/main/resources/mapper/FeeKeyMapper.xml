<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.admin.mapper.FeeKeyMapper">
    <resultMap id="selectListWithKeyValueResultMap" type="com.atguigu.lease.web.admin.vo.fee.FeeKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="feeValueList" ofType="com.atguigu.lease.model.entity.FeeValue">
            <result property="id" column="value_id"/>
            <result property="name" column="value_name"/>
            <result property="feeKeyId" column="fee_key_id"/>
            <result property="unit" column="unit"/>
        </collection>
    </resultMap>

    <select id="selectListWithKeyValue" resultMap="selectListWithKeyValueResultMap">
        select k.id,k.`name`,v.id value_id,v.`name` value_name,v.fee_key_id,v.unit  from fee_key k left join fee_value v on k.id=v.fee_key_id and v.is_deleted=0 where k.is_deleted=0
    </select>
</mapper>
